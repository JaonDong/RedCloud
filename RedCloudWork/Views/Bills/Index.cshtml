{
    <script src="~/Scripts/plugins/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        var editor;
        $(document).ready(function() {
          
            $('#example').DataTable({
                serverSide: true,
                ajax: {
                    url: '/bills/SelectBills',
                    type: 'POST'
                },
                select: true
            });
        });


    </script>
}

