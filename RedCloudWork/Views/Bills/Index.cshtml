
@{
    ViewBag.Title = "Index";
}
@section styles
{
    <link href="~/Content/plugins/dataTables/dataTables.min.css"   rel="stylesheet"/>
}
<div class="col-xs-10 col-xs-offset-1">
    <table id="example" class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
